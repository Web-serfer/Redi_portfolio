---
import Redi from "../../assets/redi.webp";
import { Icon } from "astro-icon";
import CTA from "./CTA.astro";
import HeaderSocials from "./HeaderSocials.astro";


export interface Props {
  h3?: string;
  h1?: string;
  h4?: string;
  alt?: string;
}

const {
  h3 = "Привет, Я",
  h1 = "Redi Bedi",
  h4 = "Разработчик Web-приложений",
  alt = "Разработчик сайтов в Сургуте",
  title = "Разработчик сайтов в Сургуте",
} = Astro.props;
---

<header>
  <div class="container header__container">
    <h3>{h3}</h3>
    <h1>{h1}</h1>
    <h4 class="text-light">{h4}</h4>
    <CTA />
    <HeaderSocials />

    <div class="me">
      <img 
        src={Redi} 
        alt={alt} 
        title={title} 
      />
    </div>

    <a href="#contact" class="scroll__down">
      Scroll Down 
      <Icon
        pack="mdi"
        name="arrow-down-bold"
        size={18}
        className="scroll__down-arrow"
      />     
    </a>
  </div>
</header>

<style>
  header {
    height: 100vh;
    padding-top: 7rem;
    overflow: hidden;
  }

  .header__container {
    text-align: center;
    height: 100%;
    position: relative;
  }

 
  /* ============ MAIN IMAGE ============ */

  .me {
    background: linear-gradient(var(--color-primary), transparent);
    width: 20rem;
    height: 25rem;
    position: absolute;
    left: calc(50% - 10rem);
    margin-top: 4rem;
    border-radius: 12rem 12rem 0 0;
    overflow: hidden;
    padding: 2rem 4rem 1.5rem 4rem;
  }

  /* ============ SCROLL DOWN ============ */

  .scroll__down {
    position: absolute;
    right: -2.3rem;
    bottom: 5rem;
    transform: rotate(90deg);
    font-weight: 300;
    font-size: 0.9rem;
  }

  .scroll__down-arrow {
    position: absolute;
    left: 6rem;
    top: 0.4rem;
    font-size: 1rem;
    color: var(--color-primary);
    transform: rotate(-90deg);
  }

  /* ============ (Medium Devices) ========== */
  @media (width < 1024px) {
    .header {
      height: 68vh;
    }
  }

  /* ============ (Small Devices) ========== */
  @media (width < 600px) {
    .header {
      height: 100vh;
    }

    .header__socials,
    .scroll__down {
      display: none;
    }
  }
</style>
