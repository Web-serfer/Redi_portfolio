---
import navLinks from './linksData.js'
import { Icon } from "astro-icon";
---


<nav>
  <ul class="flex">
    {
      navLinks.map(({ href, pack, name, size }) => (
        <li>
          <a href={href}>
            <Icon pack={pack} name={name} size={size} />
          </a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  nav {
    background: rgba(0, 0, 0, 0.3);
    width: max-content;
    display: block;
    padding: 0.7rem 1.7rem;
    position: fixed;
    z-index: 2;
    left: 50%;
    transform: translateX(-50%);
    bottom: 1rem;
    display: flex;
    gap: 0.8rem;
    border-radius: 3rem;
    backdrop-filter: blur(15px);
  }

  nav a {
    background: transparent;
    padding: 0.7rem;
    border-radius: 50%;
    display: flex;
    color: var(--color-light);
    font-size: 1.3rem;
  }

  nav a:hover {
    background: rgba(0, 0, 0, 0.3);
  }

  nav a.active {
    background: var(--color-bg);
    color: var(--color-white);
  }
</style>
