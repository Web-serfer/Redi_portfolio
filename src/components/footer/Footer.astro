---
import menu from "./menu";
import { Icon } from "astro-icon";

let year = new Date().getFullYear();
---



<footer>
  <a href="#" class="footer__logo"> Redi Bedi</a>
  <ul class="permalinks">
    {
      menu.map(({ section, name }) => (
        <li>
          <a href={section}>{name}</a>
        </li>
      ))
    }
  </ul>
  {/* social icons */}
  <div class="footer__socials">
    <a href="https://facebook.com">
      <Icon
        pack="ri"
        name="facebook-fill"
        size={25}               
      />
    </a>
    <a href="https://instagram.com">
      <Icon
        pack="ri"
        name="instagram-fill" 
        size={25}               
      />
    </a>
    <a href="https://twitter.com">
      <Icon
        pack="ri"
        name="twitter-fill"
        size={25}               
      />
    </a>
  </div>

  <div class="footer__copyright">
    <small>2022 - {year} &copy; All right reserved</small>
  </div>
</footer>

<style>
  footer {
  background: var(--color-primary);
  padding: 3rem 0;
  text-align: center;
  font-size: 0.9rem;
  margin-top: 7rem;
}

footer a {
  color: var(--color-bg);
}

.footer__logo {
  font-size: 2rem;
  font-weight: 3500;
  margin-bottom: 2rem;
  display: inline-block;
}

.permalinks {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 2rem;
  margin: 0 auto 3rem;
  font-size: 1rem;
  font-weight: ;
}

.footer__socials {
  display: flex;
  justify-content: center;
  gap: 1rem;
  margin-bottom: 3rem;
}

.footer__socials a {
  background: var(--color-bg);
  color: var(--color-white);
  padding: 0.8rem;
  border-radius: 0.7rem;
  display: flex;
  border: 1px solid transparent;
}

.footer__socials a:hover {
  background: transparent;
  color: var(--color-bg);
  border-color: var(--color-bg);
}

.footer__copyright {
  margin-bottom: 2rem;
  color: var(--color-bg);
  font-size: 1rem;
  font-weight: bold;
}

/* ======= (Small Devices) ======= */
@media (width < 600px) {
  .permalinks {
    flex-direction: column;
    gap: 1.5rem;
  }

  .footer__socials {
    margin-bottom: 2.6rem;
  }
}

</style>
